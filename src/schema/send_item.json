{
  "title": "发送道具",
  "description": "向指定玩家发送游戏道具",
  "type": "form",
  "permission": "ITEM_SEND",
  "layout": {
    "type": "grid",
    "columns": 2,
    "gap": 6
  },
  "fields": [
    {
      "name": "player_selector",
      "label": "选择玩家",
      "type": "select",
      "required": true,
      "placeholder": "请选择目标玩家",
      "span": 2,
      "options": [
        { "value": "1001", "label": "张三 (UIN: 1001)" },
        { "value": "1002", "label": "李四 (UIN: 1002)" },
        { "value": "1003", "label": "王五 (UIN: 1003)" }
      ],
      "validation": {
        "required": "请选择目标玩家"
      }
    },
    {
      "name": "item_id",
      "label": "道具ID",
      "type": "number",
      "required": true,
      "placeholder": "输入道具ID",
      "span": 1,
      "validation": {
        "required": "道具ID不能为空",
        "min": 1,
        "message": "道具ID必须大于0"
      }
    },
    {
      "name": "item_count",
      "label": "数量",
      "type": "number",
      "required": true,
      "placeholder": "输入数量",
      "defaultValue": 1,
      "span": 1,
      "validation": {
        "required": "数量不能为空",
        "min": 1,
        "max": 999,
        "message": "数量范围: 1-999"
      }
    }
  ],
  "actions": [
    {
      "name": "submit",
      "label": "发送道具",
      "type": "submit",
      "variant": "primary",
      "permission": "ITEM_SEND"
    }
  ]
}
